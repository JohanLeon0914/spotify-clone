---
import Layout from "@/layouts/Layout.astro";
import PlayListItemCard from "@/components/PlayListItemCard.astro";
import Greating from '@/components/Greating.svelte';
import { fetchPlaylists } from "@/lib/data";

// Llamada a la función asíncrona para obtener las playlists
const playlists = await fetchPlaylists();
---

<Layout title="Spotify clone">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-600"
  >
    <!-- <PageHeader /> -->

    <div class="relative z-10 px-6 pt-10">
      <Greating />
      <div class="flex flex-wrap mt-6 gap-4 pb-5">
        {playlists.map((playlist) => (
          <PlayListItemCard playlist={playlist} />
        ))}
      </div>

      <div
        class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80 -z-[1]"
      />
    </div>

    <style></style>
  </div>
</Layout>

